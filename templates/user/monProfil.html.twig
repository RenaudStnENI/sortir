{% extends ('layout.html.twig') %}

{% block title %}{{ parent() }} mon Profil{% endblock %}

{% block main %}

<div class="container">
    <div class="row">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-8">

            <div class="jumbotron">

                <h1>Mon Profil</h1>

                <div>
                    <br>
                    {{ form_start(userForm) }}

                    <div class="group">
                        <p>Nom :</p>
                        {{ form_widget(userForm.nom) }}
                        {{ form_errors(userForm.nom) }}
                        <div></div>
                        <br>
                    </div>

                    <div class="group">
                        <p>Prénom :</p>
                        {{ form_widget(userForm.prenom) }}
                        {{ form_errors(userForm.prenom) }}
                        <div></div>
                        <br>
                    </div>

                    <div class="group">
                        <p>E-mail :</p>
                        {{ form_widget(userForm.mail) }}
                        {{ form_errors(userForm.mail) }}
                        <div></div>
                        <br>
                    </div>

                    <div class="group">
                        <p>Téléphone :</p>
                        {{ form_widget(userForm.telephone) }}
                        {{ form_errors(userForm.telephone) }}
                        <div></div>
                        <br>
                    </div>

                    <br>
                    <div class="group">
                        {{ form_widget(userForm.password) }}
                        {{ form_errors(userForm.password) }}
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary">valider</button>
                    </div>

                    {{ form_end(userForm) }}


                </div>



            </div>

        </div>
        <div class="col-sm-2">

        </div>
    </div>
</div>

{% endblock %}