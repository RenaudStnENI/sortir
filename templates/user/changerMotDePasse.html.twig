{% extends ('layout.html.twig') %}

{% block title %}{{ parent() }} | Password{% endblock %}

{% block main %}

    <div class="container">
        <div class="row">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-8">

                <div class="container" style="margin-bottom: 100px">

                    <h1>{{ app.user.prenom }}, compl√©tez les champs suivants pour changer votre mot de passe</h1>

                    <div>
                        <br>
                        {{ form_start(form) }}


                        <div class="group">
                            <p>Ancien mot de passe :</p>
                            {{ form_widget(form.oldPassword) }}
                            {{ form_errors(form.oldPassword) }}
                            <div></div>
                            <br>
                        </div>

                        <div class="group">
                            {{ form_widget(form.password) }}
                            {{ form_errors(form.password) }}
                            <br>
                        </div>


                        <div class="offset-3 col-6 ">
                            <button type="submit"
                                    class="btn btn-outline-danger btn-block">valider
                            </button>
                            <a href="{{ path('monProfil') }}"
                               class="btn btn-outline-primary btn-block"
                               style="margin-top: 10px">retour</a>
                        </div>


                        {{ form_end(form) }}


                    </div>


                </div>

            </div>

        </div>

        <div class="col-sm-2" >
        </div>


    </div>
    </div>

{% endblock %}