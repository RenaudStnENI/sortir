{% extends ('layout.html.twig') %}

{% block title %}{{ parent() }} Modification mot de passe{% endblock %}

{% block main %}

    <div class="container">
        <div class="row">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-8">

                <div class="jumbotron">

                    <h1>{{ app.user.prenom }}, compl√©tez les champs suivants pour changer votre mot de passe</h1>

                    <div>
                        <br>
                        {{ form_start(form) }}


                        <div class="group">
                            <p>Ancien mot de passe :</p>
                            {{ form_widget(form.oldPassword) }}
                            {{ form_errors(form.oldPassword) }}
                            <div></div>
                            <br>
                        </div>

                        <div class="group">
                            {{ form_widget(form.password) }}
                            {{ form_errors(form.password) }}
                            <br>
                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">valider</button>
                        </div>

                        {{ form_end(form) }}


                    </div>

                </div>

            </div>
            <div class="col-sm-2">

            </div>
        </div>
    </div>

{% endblock %}